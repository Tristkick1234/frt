  <style>
    .campaign-section {
      background: linear-gradient(
        135deg,
        #fff5f5 0%,
        #fed7d7 50%,
        #fbb6ce 100%
      );
    }

    .campaign-content {
      max-width: 800px;
      margin: 0 auto;
    }

    .campaign-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 20px 40px -5px rgba(255, 107, 107, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .campaign-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 24px;
      flex-wrap: wrap;
      gap: 16px;
    }

    .campaign-title {
      font-size: 1.75rem;
      font-weight: 700;
      color: #2d3748;
      margin: 0;
    }

    .campaign-badge {
      background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 0.875rem;
      font-weight: 600;
    }

    .campaign-description {
      font-size: 1.125rem;
      color: #4a5568;
      line-height: 1.7;
      margin-bottom: 32px;
    }

    .campaign-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 32px;
      margin-bottom: 32px;
      padding: 24px 0;
      border-top: 1px solid #e2e8f0;
      border-bottom: 1px solid #e2e8f0;
    }

    .stat {
      text-align: center;
    }

    .stat-number {
      font-size: 2rem;
      font-weight: 700;
      color: #ff6b6b;
      margin-bottom: 4px;
    }

    .stat-label {
      font-size: 0.875rem;
      color: #718096;
      font-weight: 500;
    }

    .progress-section {
      margin-bottom: 32px;
    }

    .progress-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 8px;
    }

    .progress-label {
      font-weight: 600;
      color: #4a5568;
    }

    .progress-percentage {
      font-weight: 700;
      color: #ff6b6b;
    }

    .progress-bar {
      height: 8px;
      background: #e2e8f0;
      border-radius: 4px;
      overflow: hidden;
      margin-bottom: 8px;
    }

    .progress-fill {
      height: 100%;
      width: 62%;
      background: linear-gradient(90deg, #ff6b6b 0%, #4ecdc4 100%);
      border-radius: 4px;
      transition: width 0.6s ease;
    }

    .progress-text {
      font-size: 0.875rem;
      color: #718096;
      margin: 0;
    }

    .campaign-actions {
      display: flex;
      gap: 16px;
      justify-content: center;
      flex-wrap: wrap;
    }

    @media (max-width: 768px) {
      .campaign-card {
        padding: 24px;
      }

      .campaign-title {
        font-size: 1.5rem;
      }

      .campaign-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .campaign-stats {
        grid-template-columns: 1fr;
        gap: 24px;
      }

      .stat-number {
        font-size: 1.75rem;
      }

      .campaign-actions {
        flex-direction: column;
      }
    }
  </style>
</section>
