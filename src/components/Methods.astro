<style>
  .section {
    background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  }

  .methods-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
    margin-top: 64px;
  }

  .method-card {
    text-align: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #ffffff 0%, #f7fafc 100%);
    border: 1px solid #e2e8f0;
  }

  .method-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, transparent, #ff6b6b, #4ecdc4, transparent);
    transition: left 0.6s ease;
  }

  .method-card:hover::before {
    left: 100%;
  }

  .method-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px -5px rgba(255, 107, 107, 0.15);
  }

  .method-icon {
    font-size: 3rem;
    margin-bottom: 24px;
    display: block;
  }

  .method-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 16px;
  }

  .method-description {
    color: #718096;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .methods-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .method-card {
      padding: 24px;
    }

    .method-icon {
      font-size: 2.5rem;
      margin-bottom: 16px;
    }

    .method-title {
      font-size: 1.25rem;
    }
  }
</style>