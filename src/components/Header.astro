<header class="header">
  <div class="container">
    <nav class="nav">
      <div class="logo">
        <h1 class="logo-text">Fondation Raymond Tabopda</h1>
        <p class="logo-subtitle">Transforming Secondary Education</p>
      </div>
      <div class="nav-links">
        <a href="#mission" class="nav-link">Mission</a>
        <a href="#methods" class="nav-link">Our Work</a>
        <a href="#campaign" class="nav-link">Campaign</a>
        <a href="#contact" class="nav-link">Contact</a>
        <a href="#donate" class="btn btn-primary">Donate Now</a>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid #f7fafc;
    position: sticky;
    top: 0;
    z-index: 50;
    transition: all 0.3s ease;
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 0;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2d3748;
    margin: 0;
    line-height: 1.2;
  }

  .logo-subtitle {
    font-size: 0.875rem;
    color: #718096;
    margin: 0;
    font-weight: 500;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav-link {
    text-decoration: none;
    color: #4a5568;
    font-weight: 500;
    transition: color 0.2s ease;
    font-size: 0.95rem;
  }

  .nav-link:hover {
    color: #ff6b6b;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .logo-text {
      font-size: 1.25rem;
    }

    .logo-subtitle {
      font-size: 0.8rem;
    }
  }
</style>